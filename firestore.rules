rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Match any document in the 'users' collection
    match /users/{userId} {
      // Allow a user to read and write their own user document.
      // This is crucial for creating the document on signup and for any
      // top-level fields you might add later.
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Allow access to the 'familyMembers' subcollection
      match /familyMembers/{memberId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Allow access to the 'products' subcollection
      match /products/{productId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Allow access to the 'expenses' subcollection
      match /expenses/{expenseId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Allow access to the 'budget' subcollection
      match /budget/{budgetId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
