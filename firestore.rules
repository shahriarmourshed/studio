rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read, update, and delete their own user document.
    // Allow users to create their own user document upon signup.
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }

    // Allow users to perform all actions on documents within their own subcollections.
    // This covers expenses, incomes, products, familyMembers, etc.
    match /users/{userId}/{collection}/{docId} {
      allow read, write, create, update, delete: if request.auth.uid == userId;
    }
  }
}
