rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write any document in their own user directory.
    // This includes their user profile and all subcollections like products, expenses, etc.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
